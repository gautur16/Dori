@model IEnumerable<DoriVLN.Models.Entity.Folder>
@{
    ViewBag.Title = "Index";
}
<div class="jumbotron">
    <div class="container">
        <h1>Dóri V2</h1>
    </div>
</div>
<div class="row">
    <section>
        <div class="col-md-4">
            <div class="row">
                <h2>Folders <span style="font-size: 12pt">@Html.ActionLink("Create Folder", "NewFolder", "Folder")</span></h2>
                
            </div>
                <div class="table-responsive">
                    <table class="table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    Folder name
                                </th>
                                <th>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.ActionLink(item.name, "Overview", "Folder")
                                    </td>
                                    <td>
                                        @Html.ActionLink("Delete", "DeleteFolder", new { folder = item })                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
        </div>
    </section>
    <section>
        <div class="col-md-8">
            <h2>Files <span style="font-size: 12pt">@Html.ActionLink("Create File", "NewFile", "File")</span></h2>
            
            <div class="table-responsive" style="overflow:hidden">
                @{Html.RenderAction("DisplayFiles", "File");}
            </div>
        </div>
    </section>
</div>



